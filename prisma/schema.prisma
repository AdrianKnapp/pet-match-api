// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  small
  medium
  large
}

enum Age {
  baby
  young
  adult
  senior
}

enum Energy {
  lower
  low
  medium
  high
  higher
}

enum Independency {
  low
  medium
  high
}

enum Type {
  dog
  cat
  other
}

model Pet {
  id          String   @id @default(uuid())
  name        String
  description String
  images      String[]
  requisites  String[]
  city        String

  type         Type
  age          Age
  size         Size
  energy       Energy
  independency Independency
  environment  Size

  adopted_at DateTime?
  created_at DateTime  @default(now())

  org_id String
  org    Org    @relation(fields: [org_id], references: [id])

  @@map("pets")
}

model Org {
  id            String @id @default(uuid())
  name          String
  email         String
  zipcode       String
  phone         String
  password_hash String

  address String

  pets Pet[]

  created_at DateTime @default(now())

  @@map("orgs")
}
